<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:counter="http://schemas.huawei.com/hap/res-auto"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:orientation="vertical"
    ohos:left_padding="$float:horizontal_margin"
    ohos:right_padding="$float:horizontal_margin"
    ohos:top_padding="$float:vertical_margin"
    ohos:bottom_padding="$float:vertical_margin">

    <com.github.premnirmal.textcounter.CounterView
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:bottom_margin="20vp"
        ohos:text_size="30fp"
        ohos:text_color="$color:orange"
        counter:autoStart="true"
        counter:startValue="100"
        counter:endValue="5000"
        counter:incrementValue="10"
        counter:timeInterval="5"
        counter:prefix="$"
        counter:type="both" />

    <com.github.premnirmal.textcounter.CounterView
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:id="$+id:secondCounter"
        ohos:bottom_margin="20vp"
        ohos:text_size="30fp"
        ohos:text="250 points"
        counter:autoStart="false"
        counter:startValue="0"
        counter:endValue="1500"
        counter:incrementValue="10"
        counter:timeInterval="1"
        counter:suffix=" points"
        counter:type="integer" />

    <com.github.premnirmal.textcounter.CounterView
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:id="$+id:thirdCounter"
        ohos:bottom_margin="20vp"
        ohos:text_size="30fp"
        ohos:text="250 points"
        ohos:text_color="$color:holo_blue"
        counter:autoStart="true"
        counter:startValue="15000"
        counter:endValue="-50"
        counter:incrementValue="-50"
        counter:timeInterval="2"
        counter:suffix=" points"
        counter:type="integer" />

</DirectionalLayout>